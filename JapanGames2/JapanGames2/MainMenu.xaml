<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JapanGames2.MainMenu"
             Title="asdasdasd"
             BackgroundColor="#afcfff">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <FlexLayout Margin="0"
                        VerticalOptions="CenterAndExpand"
                        Direction="Column" 
                        AlignItems="Center"
                        JustifyContent="SpaceAround"
                        Padding="0">

                <Button Margin="10" Clicked="OnClickedButtonSudoku" Text="Play sudoku" CornerRadius="5" HeightRequest="60" WidthRequest="200" BackgroundColor="#5f8fff"/>
                <Button Margin="10" Clicked="OnClickedButtonJapCross" Text="Get solve sudoku" CornerRadius="5" HeightRequest="60" WidthRequest="200" BackgroundColor="#5f8fff"/>
                <Button Margin="10" Clicked="OnClickedButtonAbout" Text="About app" CornerRadius="5" HeightRequest="60" WidthRequest="200" BackgroundColor="#5f8fff"/>

            </FlexLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>