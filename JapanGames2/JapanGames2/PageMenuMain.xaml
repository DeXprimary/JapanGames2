<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JapanGames2.PageMainMenu"
             Title="PageMainMenu"
             BackgroundColor="{StaticResource Color_BGFiller}" >

    <ContentPage.Content>
        <StackLayout>
            <Label 
                x:Name="welcomeLabel"
                Text="Welcome to JapCrossApp"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" 
                />

            <FlexLayout 
                HeightRequest="350"
                Margin="0"
                VerticalOptions="CenterAndExpand"
                Direction="Column" 
                AlignItems="Center"
                JustifyContent="SpaceBetween"
                Padding="0">

                <Button Style="{StaticResource MainMenu_Button}" Clicked="OnClickedButtonSudoku" Text="Play Sudoku Now"/>
                <Button Style="{StaticResource MainMenu_Button}" Clicked="OnClickedButtonJapCross" Text="Help With Sudoku"/>
                <Button Style="{StaticResource MainMenu_Button}" Clicked="OnClickedButtonAbout" Text="About app =D"/>

            </FlexLayout>
            
        </StackLayout>
    </ContentPage.Content>
    
    
</ContentPage>