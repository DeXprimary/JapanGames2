<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JapanGames2.PageMainMenu"
             Title="PageMainMenu"
             StyleClass="bgFilled" >

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" 
                />

            <FlexLayout Margin="0"
                        VerticalOptions="CenterAndExpand"
                        Direction="Column" 
                        AlignItems="Center"
                        JustifyContent="SpaceAround"
                        Padding="0">

                <Button StyleClass="mainMenuButton, bgMarked" Clicked="OnClickedButtonSudoku" Text="Sudoku"/>
                <Button StyleClass="mainMenuButton, bgMarked" Clicked="OnClickedButtonJapCross" Text="Get solve sudoku"/>
                <Button StyleClass="mainMenuButton, bgMarked" Clicked="OnClickedButtonAbout" Text="About app"/>

            </FlexLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>